extends base.pug

block content 
        h4 Update Video
        form(method="POST")
             input(name="title", placeholder="New Title",value=video.title,required)
             input(placeholder="Description", required,type="text",value=video.description ,name="description")
             input(placeholder="Hashtags", required,type="text",value=video.hashtags.join(),name="hashtags")
             input(value="Save",type="submit")